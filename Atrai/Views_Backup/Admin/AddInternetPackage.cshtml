@model Atrai.Core.Entity.InternetPackageModel
@{
    ViewData["Title"] = "Add InternetPackage";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-1">
                        <h4>New Internet Package</h4>

                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="admin" asp-action="AddInternetPackage" method="post">

                                @if (Model != null)
                                {
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="CreateDate" />
                                    <input type="hidden" asp-for="LuserId" />
                                }
                                else
                                {
                                    <input type="hidden" asp-for="Id" value="0" />
                                }


                                <div class="row">
                                    <div class="col-lg-8">

                                        <div class="form-group">
                                            <div class="row">

                                                <div class="col-md-6 col-12 ">
                                                    <label asp-for="PackageName"></label>
                                                    <input type="text" asp-for="PackageName" class="form-control" placeholder="Enter Package Name">
                                                    <span asp-validation-for="PackageName" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-6 col-12 ">
                                                    <label asp-for="Speed"></label>
                                                    <input type="text" asp-for="Speed" class="form-control" placeholder="Enter Speed">
                                                    <span asp-validation-for="Speed" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-2 col-12 text-center">
                                                    <label asp-for="IsActive"></label>
                                                    <input asp-for="IsActive" class="form-control" type="checkbox">
                                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-5 col-12 ">
                                                    <label asp-for="PackageActiveDay"></label>
                                                    <input asp-for="PackageActiveDay" class="form-control" type="text" placeholder="Day">
                                                    <span asp-validation-for="PackageActiveDay" class="text-danger"></span>
                                                </div>


                                                <div class="col-md-5 col-12 ">
                                                    <label asp-for="PackageAmount"></label>
                                                    <input asp-for="PackageAmount" class="form-control" type="text" placeholder="Enter Price">
                                                    <span asp-validation-for="PackageAmount" class="text-danger"></span>
                                                </div>




                                            </div>

                                        </div>

                                        <div class="form-group">

                                            <label asp-for="PackageDescription"></label>
                                            <input asp-for="PackageDescription" class="form-control" type="text" placeholder="Enter Description">
                                            <span asp-validation-for="PackageDescription" class="text-danger"></span>

                                        </div>


                                        <div class="form-group">
                                            @*<button type="submit" class="btn btn-primary rounded-0"> Save Changes </button>*@


                                            @if (ViewBag.ActionType == "Create")
                                            {
                                                <input type="submit" value="Save Changes" class="btn  btn-primary rounded-0" /> }
                                                        else if (ViewBag.ActionType == "Edit")
                                                        {
                                                            <input type="submit" value="Update Changes" class="btn btn-warning rounded-0" /> }
                                                        else if (ViewBag.ActionType == "Delete")
                                                        {
                                                <button class="btn btn-danger rounded-0" type="button" onclick="Bank_delete()">Delete</button>}


                                            @Html.ActionLink("Back", "InternetPackageList", "Admin", null, new { @class = "btn btn-info rounded-0", @id = "btnBack" })

                                        </div>



                                    </div>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>


