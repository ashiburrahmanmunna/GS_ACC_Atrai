@model Atrai.Core.Entity.ReportStyleModel
@{
    ViewData["Title"] = "AddReportStyle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-1">
                        <h4>New Business Type</h4>

                    </div>

                    @*@Html.HiddenFor(m => m.Id, new { @value = Model.Id })
                    @Html.HiddenFor(m => m.CreateDate, new { @value = Model.CreateDate })
                    @Html.HiddenFor(m => m.LuserId, new { @value = Model.LuserId })*@

                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="admin" asp-action="AddReportStyle" method="post">
                                @if (Model != null)
                                {
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="CreateDate" />


                                    @*<input type="hidden" asp-for="LuserId" />*@
                                }
                                else
                                {
                                    <input type="hidden" asp-for="Id" value="0" />
                                }

                                <div class="row">
                                    <div class="col-lg-8">
                                            <div class="form-group row">
                      

                                                <div class="col-md-9 col-12 text-center">

                                                    <label asp-for="ReportStyleName"></label>
                                                    <input type="text" asp-for="ReportStyleName" class="form-control" placeholder="eg Enter ReportStyle">
                                                    <span asp-validation-for="ReportStyleName" class="text-danger"></span>

                                                </div>

                                                <div class="col-md-3 col-12 text-center">

                                                    <label asp-for="ReportFor"></label>
                                                    <input asp-for="ReportFor" class="form-control" placeholder="Apps Name">
                                                    <span asp-validation-for="ReportFor" class="text-danger"></span>

                                                </div>

                                            </div>

                                            <div class="form-group row">
                                                <div class="col-md-9 col-12 text-center">

                                                    <label asp-for="LogoPlacement"></label>
                                                    <input type="text" asp-for="LogoPlacement" class="form-control" placeholder="eg Center">
                                                    <span asp-validation-for="LogoPlacement" class="text-danger"></span>

                                                </div>

                                                <div class="col-md-3 col-12 text-center">

                                                    <label asp-for="TextPlacement"></label>
                                                    <input asp-for="TextPlacement" class="form-control" placeholder="eg. text-right">
                                                    <span asp-validation-for="TextPlacement" class="text-danger"></span>

                                                </div>

                                            </div>

                                            <div class="form-group row">

                                                <div class="col-md-9 col-12 text-center">

                                                    <label asp-for="ReportStyleRemarks"></label>
                                                    <input asp-for="ReportStyleRemarks" class="form-control" placeholder="Description">
                                                    <span asp-validation-for="ReportStyleRemarks" class="text-danger"></span>

                                                </div>


                                                <div class="col-md-3 col-12 text-center">
                                                    <label asp-for="IsInActive"></label>
                                                    <input asp-for="IsInActive" class="form-control" type="checkbox">
                                                    <span asp-validation-for="IsInActive" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @*<button type="submit" class="btn btn-primary rounded-0"> Save Changes </button>*@
                                                @if (ViewBag.ActionType == "Create")
                                                {
                                                <input type="submit" value="Save Changes" class="btn  btn-primary rounded-0" /> }
                                                    else if (ViewBag.ActionType == "Edit")
                                                    {
                                                        <input type="submit" value="Update Changes" class="btn btn-warning rounded-0" /> }
                                                    else if (ViewBag.ActionType == "Delete")
                                                    {
                                                <button class="btn btn-danger rounded-0" type="button" onclick="Bank_delete()">Delete</button>}
                                                @Html.ActionLink("Back", "ReportStyleList", "Admin", null, new { @class = "btn btn-info rounded-0", @id = "btnBack" })
                                            </div>


                                            @*<div class="row text-center m-2">
                                            <br />
                                            <div class="col-md-1"></div>
                                            <div class="col-md-4 col-xs-12 d-block mx-auto">

                                                @if (ViewBag.ActionType == "Create")
                                                {
                                                    <input type="submit" value="Save" class="btn  btn-success btn-block  rounded-0" />
                                                }
                                                else if (ViewBag.ActionType == "Edit")
                                                {
                                                    <input type="submit" value="Update" class="btn btn-warning btn-block rounded-0" />
                                                }
                                                else if (ViewBag.ActionType == "Delete")
                                                {
                                                    <button class="btn btn-danger btn-block rounded-0" type="button" onclick="Bank_delete()">Delete</button>
                                                }


                                            </div>

                                            <div class="col-md-4 col-xs-12 d-block mx-auto">
                                                @Html.ActionLink("Back", "ReportStyleList", "Admin", null, new { @class = "btn btn-info btn-block rounded-0", @id = "btnBack" })

                                            </div>
                                            <div class="col-md-3"></div>

                                        </div>*@
                                        </div>
                                    </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>