@model Atrai.Core.Entity.CustomerModel
@{
    ViewData["Title"] = "AddCustomer";
 Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<!-- Styles -->
@*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />*@

        <!-- Start Page Content -->
        <div class="row">
            <div class="col-md-11 col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-primary">Customer Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="admin" asp-action="AddCustomer" method="post">
                                @if (Model != null)
                                {
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="CreateDate" />
                                    <input type="hidden" asp-for="LuserId" />
                                }
                                else
                                {
                                    <input type="hidden" asp-for="Id" value="0" />
                                }

                                <div class="row">
                                    <div class="col-md-12 col-12">
                                        <div class="row">



                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                        <span class="input-group-text">
                                                            <label asp-for="Name"></label>
                                                        </span>
                                                    <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                
                                                        <span class="input-group-text ">
                                                            <label asp-for="Email"></label>
                                                        </span>
                                                

                                                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter Email">
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>



                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                  
                                                        <span class="input-group-text ">
                                                            <label asp-for="Phone"></label>
                                                        </span>
                                           

                                                    <input asp-for="Phone" class="form-control" type="tel" placeholder="Enter phone">
                                                    <span asp-validation-for="Phone" class="text-danger"></span>

                                                </div>
                                            </div>


                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                   
                                                        <span class="input-group-text ">
                                                            <label asp-for="Notes"></label>
                                                        </span>
                                              
                                                    <input asp-for="Notes" class="form-control" type="text" placeholder="Enter Notes">
                                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                                </div>
                                            </div>

                                            

                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                             
                                                        <span class="input-group-text ">
                                                            <label asp-for="ContactPersonName"></label>
                                                        </span>
                                           

                                                    <input asp-for="ContactPersonName" class="form-control" type="tel" placeholder="Enter Name">
                                                    <span asp-validation-for="ContactPersonName" class="text-danger"></span>

                                                </div>
                                            </div>


                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                                    
                                                        <span class="input-group-text ">
                                                            <label asp-for="ContactPersonDesignation"></label>
                                                        </span>
                                            
                                                    <input asp-for="ContactPersonDesignation" class="form-control" type="text" placeholder="Enter Designation">
                                                    <span asp-validation-for="ContactPersonDesignation" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                           
                                                        <span class="input-group-text ">
                                                            <label asp-for="Website"></label>
                                                        </span>
                                             
                                                    <input asp-for="Website" class="form-control" type="text" placeholder="Enter Website">
                                                    <span asp-validation-for="Website" class="text-danger"></span>
                                                </div>
                                            </div>



                                        </div>

                                        <div class="form-group row">

                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                          
                                                        <span class="input-group-text ">
                                                            <label asp-for="PrimaryAddress"></label>
                                                        </span>
                                                  
                                                    <textarea class="form-control" asp-for="PrimaryAddress" rows="3" placeholder="Primary Address input"></textarea>
                                                    <span asp-validation-for="PrimaryAddress" class="text-danger"></span>
                                                </div>
                                            </div>





                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                 
                                                        <span class="input-group-text ">
                                                            <label asp-for="SecoundaryAddress"></label>
                                                        </span>
                                                   
                                                    <textarea class="form-control" asp-for="SecoundaryAddress" rows="3" placeholder="Secoundary Address input"></textarea>
                                                    <span asp-validation-for="SecoundaryAddress" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">



                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                                
                                                        <span class="input-group-text ">
                                                            <label asp-for="OpBalance"></label>
                                                        </span>
                                                    

                                                    <input asp-for="OpBalance" class="form-control" type="number" placeholder="Opening balance">
                                                    <span asp-validation-for="OpBalance" class="text-danger"></span>
                                                </div>
                                            </div>




                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                                  
                                                        <span class="input-group-text ">
                                                            <label for="Date"> Type </label>
                                                        </span>
                                               

                                                    @Html.DropDownList("CustType", new List<SelectListItem>
                                                    {
                                                    new SelectListItem() {Text = "Ledger", Value="L"},
                                                    new SelectListItem() {Text = "Group", Value="G"},

                                                    }, new { @class = "form-control" })
                                                    @Html.ValidationMessage("CustType", "", new { @class = "text-danger" })
                                                </div>
                                            </div>






                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                         
                                                        <span class="input-group-text ">
                                                            @Html.LabelFor(x => x.CustParentId)
                                                        </span>
                                               

                                                    @Html.DropDownListFor(x => x.CustParentId,
                                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.CustomerGroupHead, "Value", "Text"), "Select Customer Group",
                                                    htmlAttributes: new { @class = "form-control", id = "CustParentId" })
                                                    @Html.ValidationMessageFor(x => x.CustParentId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>


                                        </div>

                                        <div class="form-group row">

                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                                   
                                                        <span class="input-group-text ">
                                                            <label asp-for="CreditLimit"></label>
                                                        </span>
                                              

                                                    <input asp-for="CreditLimit" class="form-control" type="number" placeholder="CreditLimit">
                                                    <span asp-validation-for="CreditLimit" class="text-danger"></span>
                                                </div>
                                            </div>



                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                                    
                                                        <span class="input-group-text ">
                                                            @Html.LabelFor(x => x.TradeTermsId)
                                                        </span>
                                                    @Html.DropDownListFor(x => x.TradeTermsId,
                                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.TradeTerms, "Value", "Text"), "Select Trade Terms",
                                                    htmlAttributes: new { @class = "form-control", id = "TradeTermsId" })
                                                    @Html.ValidationMessageFor(x => x.TradeTermsId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>




                                            <div class="col-md-4">
                                                <div class="input-group mb-2">
                                                 
                                                        <span class="input-group-text ">
                                                            @Html.LabelFor(x => x.NextPaymentDate)
                                                        </span>

                                            @Html.TextBoxFor(x => x.NextPaymentDate, @"{0:dd-MMM-yyyy}", new { id = "NextPaymentDate", @class = "form-control datepicker", @placeholder = "Enter Next Payment Date", autocomplete = "off" })
                                                    @Html.ValidationMessageFor(x => x.NextPaymentDate, "", new { @class = "text-danger " })
                                                </div>
                                            </div>

                                        </div>


                                        <div class="form-group row">

                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                               
                                                        <span class="input-group-text ">
                                                            <label asp-for="CustomerCommissionPer"></label>
                                                        </span>

                                                    <input asp-for="CustomerCommissionPer" class="form-control" type="number" placeholder="Customer Commission Per">
                                                    <span asp-validation-for="CustomerCommissionPer" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                  
                                                        <span class="input-group-text ">
                                                            <label asp-for="SRCommissionPer"></label>
                                                        </span>
                                                    <input asp-for="SRCommissionPer" class="form-control" type="number" placeholder="SR Commission Per">
                                                    <span asp-validation-for="SRCommissionPer" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>




                                        <div class="row">


                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                              
                                                        <span class="input-group-text ">
                                                            <label asp-for="MonthlyTarget"></label>
                                                        </span>
                                             


                                                    <input asp-for="MonthlyTarget" class="form-control" type="number" placeholder="Monthly Target">
                                                    <span asp-validation-for="MonthlyTarget" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                         
                                                        <span class="input-group-text ">
                                                            <label asp-for="SalesRepresentativeId"></label>
                                                        </span>

                                                    @Html.DropDownListFor(x => x.SalesRepresentativeId,
                                                    new SelectList((IEnumerable<SelectListItem>)ViewBag.SalesRepresentative, "Value", "Text"), "Select Sales Representative",
                                                    htmlAttributes: new { @class = "form-control", id = "SalesRepresentativeId" })
                                                    @Html.ValidationMessageFor(x => x.SalesRepresentativeId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>






                                        </div>


                                        <div class="row">




                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                  
                                                        <span class="input-group-text ">
                                                            <label asp-for="LoginId"></label>
                                                        </span>

                                                    <input type="text" asp-for="LoginId" class="form-control" placeholder="Login Id">
                                                    <span asp-validation-for="LoginId" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div class="col-md-6">
                                                <div class="input-group mb-2">
                                                  
                                                        <span class="input-group-text ">
                                                            <label asp-for="Password"></label>
                                                        </span>
                                                 

                                                    <input type="text" asp-for="Password" class="form-control" placeholder="Password">
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                            </div>



                                        </div>


                                        <div class="form-group">

                                            @if (ViewBag.ActionType == "Create")
                                            {
                                                <input type="submit" value="Save Changes" class="btn  btn-success rounded-0" />
                                            }
                                            else if (ViewBag.ActionType == "Edit")
                                            {
                                                <input type="submit" value="Update Changes" class="btn btn-warning rounded-0" />
                                            }
                                            else if (ViewBag.ActionType == "Delete")
                                            {
                                                <button class="btn btn-danger rounded-0" type="button" onclick="Bank_delete()">Delete</button>
                                            }


                                            @Html.ActionLink("Back", "CustomerList", "Admin", null, new { @class = "btn btn-info rounded-0", @id = "btnBack" })

                                        </div>

                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
<!-- Scripts -->
