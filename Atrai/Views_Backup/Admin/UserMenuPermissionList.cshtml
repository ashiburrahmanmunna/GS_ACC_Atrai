@model IEnumerable<Atrai.Core.Entity.MenuPermission_MasterModel>
@{ ViewData["Title"] = "User Menu Permission List";
    Layout = "~/Views/Shared/_adminLayout.cshtml"; }



<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("User Menu Permission Entry", "AddUserMenuPermission", null, null, new { @class = "btn btn-sm btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">User Menu Permission List</h2>
            </div>
        </div>
        <div class="card p-2">
            <div class="table-responsive text-center">
                <table id="tbllist" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                    <thead class="text-center">
                        <tr>
                            <th>
                                User Name
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Company Name
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.UserAccount.Name 
                                </td>
                                <td>
                                    @item.UserAccount.Email
                                </td>
                                <td>
                                    @item.Company.CompanyName
                                </td>
                                <td>
                                    <span data-toggle="tooltip" title="Edit">
                                        @Html.ActionLink(" ", "AddUserMenuPermission", new { MenuPermissionId = item.Id, UserId = item.LUserIdPermission, comid = item.ComId}, new { @class = "fa fa-edit btn btn-warning btn-md", @target = "_blank" })
                                    </span>
                                    <span data-toggle="tooltip" title="Delete">
                                        @Html.ActionLink(" ", "DeleteUserMenuPermission", new { MenuPermissionId = item.Id, UserId = item.LUserIdPermission, comid = item.ComId, isDelete = 1 }, new { @class = "fa fa-trash btn btn-danger btn-md" })
                                    </span>
                                </td>
                            </tr>
                            }}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>

        $(document).ready(function () {

            $('#tbllist').DataTable({
                dom: '<"dom_wrapper fh-fixedHeader"flB>tip',
                //buttons: [
                //    'copy', 'csv', 'excel', 'pdf'
                //],
                buttons: {
                    dom: {
                        button: {
                            className: 'btn rounded-0'
                        }
                    },
                    buttons: [
                        {
                            extend: 'colvis',
                            "columns": ':not(:last-child)',
                            text: '<i class="mdi mdi-view-column"></i>',
                            className: 'btn-info',
                            titleAttr: 'Show / hide columns',
                            //collectionLayout: 'fixed two-column'

                        },
                        {
                            extend: 'excel',
                            text: '<i class="mdi mdi-file-excel"></i>',
                            className: 'btn-success',
                            titleAttr: 'Export to excel'
                        }

                    ]
                },
                //"columnDefs": [
                //    // Hide second, third and fourth columns
                //    { "visible": false, "targets": [0] }
                //],
                "searching": true,
                "paging": false,
                "ordering": true,
                "info": true,
                "iDisplayLength": 20,
                "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]],
                "scrollX": true,
                "scrollY": "60vh",
                "scrollCollapse": true,
                //fixedColumns: {
                //    leftColumns: 2,
                //    rightColumns: 1
                //},
                language: {
                    sLengthMenu: "_MENU_",
                    search: "",
                    searchPlaceholder: "Search..."
                }
            });
        });


    </script>
}



