@model Atrai.Core.Entity.TradeTermsModel
@{
    ViewData["Title"] = "Add Trade Term";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-1">
                        <h4>New Trade Term</h4>

                    </div>

            

                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="admin" asp-action="AddTradeTerms" method="post">
                                @if (Model != null)
                                {
                                    <input type="hidden" asp-for="Id" />
                                    <input type="hidden" asp-for="CreateDate" />
                                    @*<input type="hidden" asp-for="LuserId" />*@
                                }
                                else
                                {
                                    <input type="hidden" asp-for="Id" value="0" />
                                }

                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label asp-for="TradeTermCaption"></label>
                                            <input type="text" asp-for="TradeTermCaption" class="form-control" placeholder="eg Enter Trade Terms Name">
                                            <span asp-validation-for="TradeTermCaption" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Description"></label>
                                            <input asp-for="Description" class="form-control" placeholder="Description">
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>


                                        <div class="form-group">
                                            <label asp-for="Day"></label>
                                            <input asp-for="Day" class="form-control" placeholder="Day" type="number">
                                            <span asp-validation-for="Day" class="text-danger"></span>
                                        </div>
                                      

                                        <div class="form-group">
                                            <label asp-for="isInactive"></label>
                                            <input asp-for="isInactive" class="form-control">
                                            <span asp-validation-for="isInactive" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            @*<button type="submit" class="btn btn-primary rounded-0"> Save Changes </button>*@


                                            @if (ViewBag.ActionType == "Create")
                                            {
                                                <input type="submit" value="Save Changes" class="btn  btn-primary rounded-0" /> }
                                            else if (ViewBag.ActionType == "Edit")
                                            {
                                                <input type="submit" value="Update Changes" class="btn btn-warning rounded-0" /> }
                                            else if (ViewBag.ActionType == "Delete")
                                            {
                                                <button class="btn btn-danger rounded-0" type="button" onclick="Bank_delete()">Delete</button>}


                                            @Html.ActionLink("Back", "TradeTermsList", "Admin", null, new { @class = "btn btn-info rounded-0", @id = "btnBack" })

                                        </div>

                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>