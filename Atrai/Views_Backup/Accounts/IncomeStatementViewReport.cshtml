                                                    <td class="text-nowrap text-center"><a href="#">@Html.ActionLink(item.AccCode + "", "NotesViewReport" , new {criteria = ViewBag.criteria,strid = ViewBag.strid, AccIdGroup = item.AccId,ReportType = "IncomeStatement", type = "pdf" , CountryId = 18 , dtFrom = DateTime.Now.Date, dtTo = DateTime.Now.Date }, new { @target = "_blank" })</a></td>
