        }

        .media-container::-webkit-scrollbar-thumb {
            background-color: #3f6791;
            border-radius: 100px;
        }

        #loadingmedia {
            transition: .5s ease;
            /*opacity: 0;*/
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
