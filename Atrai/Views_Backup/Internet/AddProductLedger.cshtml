        }




        function autocompleteProduct() {
            $("#ProductName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '../admin/ProductSearch/',
                        dataType: "json",
                        data: { query: $("#ProductName").val() },
                        success: function (data) {
                            console.log(data);
                            response($.map(data, function (item) {
                                return { ProductId: item.Id, Description: item.Description, label: item.Category.Name + ' ' + item.Name + ' ' + item.Description + ' ' + item.Code, Price: item.Price };
                            }));
                        },
                        error: function (xhr, status, error) {
                            alert("Error");
                        },
                    });
                },
                autoFocus: true,
                minLength: 3,
                change: function (event, ui) {
                    if (ui.item === null) {
                        $(this).val('');
                        $('#ProductId').val('');
                        $('#ProductName').val('');
                        $('#PrdDescription').val('');
                    }
                },
                select: function (event, ui) {

                    $("#ProductId").val(ui.item.ProductId);
                    $("#ProductName").val(ui.item.label);
                    $("#PrdDescription").val(ui.item.Description);




                    return false;
                }
            });
        }




    </script>

}