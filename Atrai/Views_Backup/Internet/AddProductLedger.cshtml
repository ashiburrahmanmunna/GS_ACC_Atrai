@model Atrai.Core.Entity.ProductLedgerModel
@{ ViewData["Title"] = "AddProductLedger";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }


<div class="page-wrapper">
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <div class="col-md-7 col-12">
                <div class="card">
                    <div class="card-header py-1">
                        <h4>Product Ledger Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-elements">
                            <form asp-controller="Internet" asp-action="AddProductLedger" method="post">
                                @if (Model != null)
                                {
                            <input type="hidden" asp-for="Id" />
                                            <input type="hidden" asp-for="CreateDate" />
                                                            <input type="hidden" asp-for="LuserId" /> }
