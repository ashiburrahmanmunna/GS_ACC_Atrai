                                    </div>*@


                                    <div class="col-md-6 col-12">
                                        @Html.LabelFor(x => x.UserName)
                                        @Html.TextBoxFor(x => x.UserName, null, new { @class = "form-control", @placeholder = "User Name ", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                                    </div>


                                </div>


                                <div class="form-group row">
                                    @*<div class="col-md-3 col-12">

                <label asp-for="ProductId">ProductId</label>
                <input asp-for="ProductId" class="form-control" placeholder="eg Product Id" readonly="@(true)">
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>*@
                                    <div class="col-md-6 col-12">
                                        @Html.LabelFor(x => x.ProductName)
                                        @Html.TextBoxFor(x => x.ProductName, null, new { @class = "form-control", @placeholder = "Product Name " })
                                        @Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label asp-for="PrdDescription"></label>
                                        <input type="text" class="form-control" asp-for="PrdDescription" placeholder="Product Description">
                                        <span asp-validation-for="PrdDescription" class="text-danger"></span>
                                    </div>

                                </div>


                                <div class="form-group row">
                                    <div class="col-md-6 col-12">
                                        <label asp-for="Subject"></label>
                                        <input type="text" asp-for="Subject" class="form-control" placeholder="eg Subject">
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label asp-for="TicketId"></label>
                                        <input type="text" class="form-control" asp-for="TicketId" placeholder="Ticket Id">                                        
                                        <span asp-validation-for="TicketId" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4 col-12">
                                        <label asp-for="Quantity"></label>
                                        <input asp-for="Quantity" class="form-control" placeholder="eg Quantity">
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-8 col-12">
                                        <label asp-for="Referance"></label>
                                        <input type="text" class="form-control" asp-for="Referance" placeholder="Referance">
                                        <span asp-validation-for="Referance" class="text-danger"></span>
                                    </div>

                                </div>


                                <div class="form-group row">
                                    <div class="col-md-6 col-12">
                                        <label asp-for="ReceivedBy"></label>
                                        <input type="text" asp-for="ReceivedBy" class="form-control" placeholder="eg Received By">
                                        <span asp-validation-for="ReceivedBy" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label asp-for="Comment"></label>
                                        <input type="text" class="form-control" asp-for="Comment" placeholder="Comment">
                                        <span asp-validation-for="Comment" class="text-danger"></span>
                                    </div>

                                </div>



                                <div class="form-group">
                                    @if (ViewBag.ActionType == "Create")
                                    {
                            <input type="submit" value="Save Changes" class="btn  btn-primary rounded-0" /> }
                        else if (ViewBag.ActionType == "Edit")
                        {
                            <input type="submit" value="Update Changes" class="btn btn-warning rounded-0" /> }
                        else if (ViewBag.ActionType == "Delete")
                        {
                            <button class="btn btn-danger rounded-0" type="button" onclick="Bank_delete()">Delete</button>}
                                    @Html.ActionLink("Back", "ProductLedgerList", "Internet", null, new { @class = "btn btn-info rounded-0", @id = "btnBack" })

                                </div>



                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>




