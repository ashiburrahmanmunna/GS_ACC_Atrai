        function autocompleteProduct() {
            $("#ProductName").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '../admin/ProductSearch/',
                        dataType: "json",
                        data: { query: $("#ProductName").val() },
                        success: function (data) {
                            console.log(data);
                            response($.map(data, function (item) {
