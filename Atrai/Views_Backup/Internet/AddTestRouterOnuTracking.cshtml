                                                    new SelectListItem() {Text = "Not Withdrawn", Value="NotWithdrawn"},
                                                    new SelectListItem() {Text = "Purchased", Value="Purchased"},
                                                    new SelectListItem() {Text = "Lost", Value="Lost"},
                                                }, "Select Status", new { @class = "form-control" })

                                    </div>

                                </div>




                                <div class="form-group row">
                                    <div class="col-md-6 col-12">
                                        <label asp-for="MacSerial"></label>
                                        <input type="text" asp-for="MacSerial" class="form-control" placeholder="eg MAC Serial No">
                                        <span asp-validation-for="MacSerial" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label asp-for="GivenBy"></label>
                                        <input type="text" class="form-control" asp-for="GivenBy" placeholder="Given By">
                                        <span asp-validation-for="GivenBy" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <div class="col-md-4 col-12">
                                        <label asp-for="WithdrawnBy"></label>
                                        <input asp-for="WithdrawnBy" class="form-control" placeholder="eg Withdrawn By">
                                        <span asp-validation-for="WithdrawnBy" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-8 col-12">
                                        <label asp-for="Note"></label>
                                        <input type="text" class="form-control" asp-for="Note" placeholder="Note">
                                        <span asp-validation-for="Note" class="text-danger"></span>
                                    </div>

                                </div>





                                <div class="form-group">
                                    @if (ViewBag.ActionType == "Create")
                                    {
                            <input type="submit" value="Save Changes" class="btn  btn-primary rounded-0" /> }
                        else if (ViewBag.ActionType == "Edit")
                        {
                            <input type="submit" value="Update Changes" class="btn btn-warning rounded-0" /> }
                        else if (ViewBag.ActionType == "Delete")
                        {
                            <button class="btn btn-danger rounded-0" type="button" onclick="Bank_delete()">Delete</button>}
                                    @Html.ActionLink("Back", "TestRouterOnuTrackingList", "Internet", null, new { @class = "btn btn-info rounded-0", @id = "btnBack" })

                                </div>



                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
</div>




