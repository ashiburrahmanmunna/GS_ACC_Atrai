@model Atrai.Core.ViewModel.ChangePasswordViewModel
@{ ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_adminLayout.cshtml"; }


<div class="container pt-2">
    @Html.AntiForgeryToken()


    <div class="row justify-content-center">


        <div class="card p-0 col-md-5 col-12">
            <div class="card-header">
                <h4 class="text-danger" style="text-align:center">Change Password</h4>
            </div>


            <div class="card-body">

                @if (TempData["UserSignUpFailed"] != null)
                {
                <p class="alert alert-danger">@TempData["UserLoginFailed"]</p>}
                <form id="myform" asp-action="ChangePassword" asp-controller="Home" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group row">
                        <div class="col-md-12 col-12">
                            <label asp-for="PhoneNo" class="control-label"></label>
                            <input asp-for="PhoneNo" class="form-control" readonly />
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-12">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 col-12">
                            <label asp-for="OldPassword" class="control-label"></label>
                            <input type="Password" asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-12">
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-12">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group text-center">
                        @*<input type="submit" value="Signup" class="btn btn-default btn-success rounded-0" />*@
                        <button id="create" class="btn btn-info btn-block rounded-0" type="submit">Confirm</button>

                    </div>
                </form>
            </div>

        </div>
    </div>

    <br />


</div>

@section scripts {
    <script type="text/javascript">


        $(document).ready(function () {


        });



    </script>
}

