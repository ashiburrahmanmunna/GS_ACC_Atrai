@model Atrai.Core.ViewModel.ChangePasswordViewModel
@{ ViewData["Title"] = "Reset Password";
                Layout = "~/Views/Shared/_Layout.cshtml"; }



<div class="container pt-5 mt-5">
    @Html.AntiForgeryToken()


    <div class="row justify-content-center">


        <div class="card p-0 col-md-5 col-12">
            <div class="card-header">

                <h3 style="text-align:center">Reset Password</h3>
            </div>

            <div class="card-body">

                @if (TempData["UserSignUpFailed"] != null)
                {
                <p class="alert alert-danger">@TempData["UserLoginFailed"]</p>            }
                <form id="myform" asp-action="ForgetPassword" asp-controller="Home" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

@*                <div class="row">
                    @Html.DisplayFor(model => model.Email)
                </div>*@

                <div class="form-group row">
                    <div class="col-md-12 col-12">
                        <label asp-for="Email" class="control-label"></label>
                        <input type="Email" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 col-12">
                        <label asp-for="PhoneNo" class="control-label"></label>
                        <input type="text" asp-for="PhoneNo" class="form-control" />
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row text-center">
                    <div class="col-md-6 col-6 my-1">
                        @*<input type="submit" value="Signup" class="btn btn-default btn-success rounded-0" />*@
                        <button id="create" class="btn btn-info btn-block rounded-0" type="submit">Submit</button>
                    </div>

                    <div class="col-md-6 col-6 my-1">
                        @Html.ActionLink("Back", "Login", "Home", null, new { @class = "btn btn-sm btn-outline-info btn-block  rounded-0", @id = "btnBack" })
                    </div>

                </div>
                </form>
            </div>

        </div>
    </div>

    <br />




  
</div>



