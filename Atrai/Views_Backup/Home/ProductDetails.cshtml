                <h6 class="mt-2">Product Code : @Html.DisplayFor(model => model.ProductCode)</h6>
                <p class="my-2"> @Html.DisplayFor(model => model.Description)</p>

                <a href="#"
                   data-id="@Html.DisplayFor(model => model.ProductId)"
                   data-name="@Html.DisplayFor(model => model.ProductName)"
                   data-price="@Html.DisplayFor(model => model.SalesPrice)"
                   data-size="@Html.DisplayFor(model => model.SizeName)"
                   data-color="@Html.DisplayFor(model => model.ColorName)"
                   data-brand="@Html.DisplayFor(model => model.BrandName)"
                   class="btn btn-md btn-primary add-to-cart">
                    Add to cart
                </a>
                <button onclick="window.location.href = '@Url.Action("EcomIndex", "Home", new { IsMobile = "0" })';" class="btn btn-md btn-info back-btn">Back To List</button>

            </div>
