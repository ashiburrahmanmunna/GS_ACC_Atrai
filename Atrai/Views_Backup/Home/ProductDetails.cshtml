            </div>


            <!-- Left Side For Description -->
            <div class="col-md-6 col-12 col-12">
                <h6> Category : @Html.DisplayFor(model => model.CategoryName) </h6>
                <h6> Supplier Name : @Html.DisplayFor(model => model.CompanyName) </h6>
                <h6> Contact No : @Html.DisplayFor(model => model.CompanyPhone) </h6>


                <h3 class="my-4 name">@Html.DisplayFor(model => model.ProductName)   @Html.DisplayFor(model => model.SizeName)</h3>
                <h3 class="my-4 brand">@Html.DisplayFor(model => model.BrandName)</h3>
                <h3 class="my-4 color">@Html.DisplayFor(model => model.ColorName)</h3>
                <h4 class="mb-4 price">
                    <span class="money">৳ </span> <span class="discounted-price">@Html.DisplayFor(model => model.SalesPrice)</span>
                    @if (Model.OldPrice > 0)
                    {
                        <span class="product-price"><del><span class="money">৳ </span> @Html.DisplayFor(model => model.OldPrice) </del></span>
                    }
                    else
                    {
                        <span class="product-price"></span>
                    }
                </h4>
                <div class="rating">


                    @{

                        var xyz = @Model.ProductReviews.Count();
                    }
                    @if (xyz > 0)
                    {
                        for (int i = 0; i < Model.ProductReviews.Average(x => x.Ratings); i++)
                        {
                            <span class="fa fa-star checked"></span>
                        }

                    }

                    @Model.ProductReviews.Where(x => x.Reviews.Length > 0).Count() Reviews

                </div>
                @*<div class="rating">

