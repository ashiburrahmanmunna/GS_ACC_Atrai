    <div class="single-product pt-5">
        <div class="row py-5 m-5" style="border: 1px solid #87767659; box-shadow: 8px 15px 54px #c0bfc5;">


            <div class="col-md-6 col-12">

                @if (@Model.ImagePath != null)
                {
                    <img class="img-fluid w-100 mb-1 example float-right" src="..@Model.ImagePath" id="main-img" onerror="this.onerror=null;this.src='../Content/ProductImages/0.png'" alt="this.src='/Content/ProductImages/0.png'">

                }
                else
                {
                    <img class="img-fluid w-100 mb-1 example float-right" src="../Content/ProductImages/0.png" id="main-img">
                }

