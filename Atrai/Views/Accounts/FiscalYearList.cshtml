@model IEnumerable<Atrai.Model.Core.Entity.Acc_FiscalYearModel>
@{
    ViewData["Title"] = "Fiscal Year List";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div class="page-wrapper">

    @using (Html.BeginForm("FiscalYearList", "Accounts", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="container-fluid">

            <div class="text-center">


            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h2 id="styletext">Fiscal Year</h2>
                        </div>
                        <div class="col-md-4 col-12 mb-2 text-end">
                        @if (Model.Count() == 0)
                        {
                                @Html.ActionLink("Create Fiscal Year", "AddFiscalYear", null, null, new { @class = "btn btn-sm btn-success btn-block ", @id = "btnBack" })
                        }
                        else
                        {
                                <input type="submit" value="Close" class="btn btn-danger btn-sm btn-block " />
                        }
                        </div>

                    </div>
                    <div class="col-md-12 col-12">
                        <div class="table-responsive">
                            <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover text-center" cellspacing="0" width="100%">
                                <thead class="bg-light">
                                    <tr>

                                        <th>
                                            @Html.DisplayNameFor(model => model.FYName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OpDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ClDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.isRunning)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.isWorking)
                                        </th>

                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.HiddenFor(modelItem => item.Id)
                                                @Html.DisplayFor(modelItem => item.FYName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OpDate)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.ClDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.isRunning)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.isWorking)
                                            </td>

                                        </tr>
                                    }

                            </table>
                        </div>

                </div>
                </div>
              
            </div>
        </div>

    }

</div>


