@model IEnumerable<Atrai.Model.Core.Entity.Acc_VoucherNoPrefixModel>
@{ ViewData["Title"] = "Voucher Prefix List";
    Layout = "~/Views/Shared/_adminLayout.cshtml"; }
<style>
    .table-bordered > :not(caption) > * {
        border-width: 0px 0px .5px 0px !important;
    }
</style>

<div class="page-wrapper">
    <div class="container">
        <form class="card p-2">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8 col-12">
                        <h2 id="styletext" class="text-right">Voucher Prefix Setup List</h2>
                    </div>
                    <div class="col-md-4 col-12 ">
                        @Html.ActionLink("Voucher Prefix Setup Creation", "AddVoucherNoPrefix", null, null, new { @class = "btn btn-sm btn-outline-info  float-end", @id = "btnBack" })
                    </div>
                 


                </div>
            </div>
            <div class="card-body">
            <div class="table-responsive text-nowrap">
                <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover text-center border-start" cellspacing="0" width="100%">
                    <thead class="bg-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.VoucherShortPrefix)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vVoucherTypes.VoucherTypeName)
                            </th>

                            <th>
                                Action
                            </th>

                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.VoucherShortPrefix)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vVoucherTypes.VoucherTypeName)
                                </td>

                                <td>
                                              <div class="btn-group btn-group-sm">
                                        <span data-toggle="tooltip" title="Edit!">
                                                @Html.ActionLink(" ", "EditVoucherNoPrefix", new { VoucherNoPrefixId = item.Id }, new { @class = "bi bi-pencil text-warning pe-3", @target = "_blank" })
                                        </span>
                                        <span data-toggle="tooltip" title="Delete!">
                                                @Html.ActionLink(" ", "DeleteVoucherNoPrefix", new { VoucherNoPrefixId = item.Id }, new { @class = "bi bi-trash text-danger" })
                                        </span>
                                    </div>


                                </td>
                            </tr>
                        }

                </table>
            </div>
            </div>
        </form>
    </div>
</div>



