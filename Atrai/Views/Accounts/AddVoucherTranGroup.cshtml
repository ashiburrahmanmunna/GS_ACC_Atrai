@model Atrai.Model.Core.Entity.VoucherTranGroupModel
@{
    ViewData["Title"] = "AddVoucherTransactionGroup";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<style>

    #styletext {
        color: transparent;
        background: #666666;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        text-shadow: 0px 3px 3px rgba(255,255,255,0.5);
        font-weight: 100;
        font-size: 40px;
    }

    .footer {
        position: fixed;
        bottom: 0;
    }
</style>



<div class="page-wrapper">
    <div class="container">
        @using (Html.BeginForm("AddVoucherTranGroup", "Accounts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row mt-5 pt-5">
                <div class="col-md-3"></div>
                <div class="col-md-6 col-12">
                    <div id="modalbodyrakin" class="row card p-4 ">
                        <div class="col-md-12 order-md-1">
                            <h4 class="mb-4">Voucher Transaction Group</h4>
                            <div class="needs-validation" novalidate>
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @if (Model != null)
                                    {

                                        <input type="hidden" id="Id" name="Id" value="@Model.Id" />
                                    }


                                    <div class="col-md-12 col-12">
                                        <div class="input-group mb-2">
                                                <span class="input-group-text py-0">
                                                Group Name
                                                    @*@Html.LabelFor(model => model.VoucherTranGroupName)*@
                                                </span>
                                            @Html.EditorFor(model => model.VoucherTranGroupName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.VoucherTranGroupName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                </div>

                                <div class="row">
                                    <div class="col-md-3"></div>
                                    <div class="col-md-3 col-6 d-grid mb-2">
                                        @if (ViewBag.ActionType == "Create")
                                        {
                                            <input type="submit" value="Create" class="btn btn-primary " /> @*<button class="btn btn-primary btn-lg btn-block " type="button" onclick="Products_save()">Save</button>*@ }
                                        else if (ViewBag.ActionType == "Edit")
                                        {
                                            <input type="submit" value="Update" class="btn btn-warning " /> @*<button class="btn btn-warning btn-lg btn-block " type="button" onclick="Products_save()">Update</button>*@ }
                                        else if (ViewBag.ActionType == "Delete")
                                        {
                                            <button class="btn btn-danger " type="button" onclick="VoucherTranGroup_delete()">Delete</button>
                                        }
                                    </div>
                                    <div class="col-md-3 col-6 d-grid mb-2">
                                        @Html.ActionLink("Back", "VoucherTranGroupList", "Accounts", null, new { @class = "btn btn-info " })
                                    </div>
                                    <div class="col-md-3"></div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>

            </div>


        }
    </div>

</div>



@section Scripts{
    <script type="text/javascript">

        function VoucherTranGroup_delete() {

            var Id = $("#Id").val();
            //alert(Id);
            $.ajax({

                url: '@Url.Action("DeleteVoucherTranGroup", "Accounts")',
                //url: '@Url.Action("Delete")',
                data: JSON.stringify({ id: Id }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {

                    if (result.Success == "1") {
                        window.location.href = '@Url.Action("VoucherTranGroupList", "Accounts")';
                    }
                    else {
                        alert(result.ex);
                    }
                }
            });
        }




    </script>
}
