@model Atrai.Model.Core.Entity.Acc_VoucherTypeModel
@{ ViewData["Title"] = "Voucher Type";
    Layout = "~/Views/Shared/_adminLayout.cshtml"; }
<style>

    #styletext {
        color: transparent;
        background: #666666;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        background-clip: text;
        text-shadow: 0px 3px 3px rgba(255,255,255,0.5);
        font-weight: 100;
        font-size: 40px;
    }

    .footer {
        position: fixed;
        bottom: 0;
    }
</style>


   
        @using (Html.BeginForm("AddVoucherType", "Accounts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="container">
            <div class="row mt-5 pt-5">
                <div class="col-md-3"></div>
                <div class="col-md-6 col-12">
         
                <div id="modalbodyrakin" class="row card p-4">
                    <div class="col-md-12 order-md-1">
                        <h4 class="mb-3">Voucher Type Setup</h4>
                        <div class="needs-validation" novalidate>
                            <div class="row">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @if (Model != null)
                                {

                                    <input type="hidden" id="Id" name="Id" value="@Model.Id" />


                                }
                                else
                                {
                                    <input type="hidden" id="comid" name="comid" value="" />
                                }





                                <div class="col-md-12 col-12">
                                    <div class="input-group mb-2">
                                       
                                            <span class="input-group-text">
                                                @Html.LabelFor(model => model.VoucherTypeName, htmlAttributes: new { @class = "b" })
                                            </span>
                                       
                                        @Html.EditorFor(model => model.VoucherTypeName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.VoucherTypeName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12 col-12">
                                    <div class="input-group mb-2">
                                       
                                            <span class="input-group-text">
                                                @Html.LabelFor(model => model.VoucherTypeNameShort, htmlAttributes: new { @class = " " })
                                            </span>
                                        
                                        @Html.EditorFor(model => model.VoucherTypeNameShort, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.VoucherTypeNameShort, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12 col-12">
                                    <div class="input-group mb-2">
                                       
                                            <span class="input-group-text">
                                               @* @Html.LabelFor(model => model.VoucherTypeClass)*@
                                            [HTML/ Panel Color] Class
                                        </span>
                                        @Html.EditorFor(model => model.VoucherTypeClass, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.VoucherTypeClass, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12 col-12">
                                    <div class="input-group mb-2">
                                     
                                            <span class="input-group-text">
                                            Button Class
                                                @*@Html.LabelFor(model => model.VoucherTypeButtonClass)*@
                                            </span>
                                        @Html.EditorFor(model => model.VoucherTypeButtonClass, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.VoucherTypeButtonClass, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12 col-12">
                                    <div class="input-group mb-2">
                                            <span class="input-group-text">
                                                @Html.LabelFor(model => model.isSystem)
                                            </span>
                                            <span class="input-group-text">
                                                @Html.CheckBoxFor(model => model.isSystem, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.isSystem, "", new { @class = "text-danger" })
                                            </span>
                                        

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3"></div>
                                <div class="col-md-3 col-6 d-grid mb-2">
                                    @if (ViewBag.ActionType == "Create")
                                    {
                                        <input type="submit" value="Create" class="btn btn-primary" />

                                        @*<button class="btn btn-primary btn-lg btn-block " type="button" onclick="Products_save()">Save</button>*@
                                    }
                                    else if (ViewBag.ActionType == "Edit")
                                    {
                                        <input type="submit" value="Update" class="btn btn-warning " />

                                        @*<button class="btn btn-warning btn-lg btn-block " type="button" onclick="Products_save()">Update</button>*@
                                    }
                                    else if (ViewBag.ActionType == "Delete")
                                    {
                                        <button class="btn btn-danger " type="button" onclick="VoucherType_delete()">Delete</button>
                                    }
                                </div>
                                <div class="col-md-3 col-6 d-grid mb-2">
                                    @Html.ActionLink("Back", "VoucherTypeList", "Accounts", null, new { @class = "btn btn-info " })
                                </div>
                                <div class="col-md-3"></div>
                            </div>

                        </div>

                    </div>
                </div>
                    <div class="col-md-3"></div>
                </div>

            </div>
       


    </div>
}
@section Scripts{
    <script type="text/javascript">

     function VoucherType_delete() {

         var Id = $("#Id").val();
         //alert(Id);
            $.ajax({

                url: '@Url.Action("Delete", "Accounts")',
                //url: '@Url.Action("Delete")',
                data: JSON.stringify({ id: Id }), //use id here
                //data: JSON.stringify(salesmain),
                type: 'POST',
                contentType: 'application/json;',
                dataType: 'json',
                success: function (result) {

                    if (result.Success == "1") {
                        window.location.href = '@Url.Action("Index", "Accounts")';
                    }
                    else {
                        alert(result.ex);
                    }
                }
            });
    }




    </script>
}
