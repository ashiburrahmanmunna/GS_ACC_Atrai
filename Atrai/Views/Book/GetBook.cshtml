</style>

@model BookModel
<div class="page-wrapper">
    <br />


    <div class="container" style="align-content:center">


        <div class="row">
            <div class="col-md-10 col-12">
                <div class="text-center">

                    <h2>Image details</h2>
                    <h3>@Model.Title</h3>

                <a href="@Url.Action("AddnewBook", "Book", new { Id = Model.Id })" class="btn btn-icon btn-warning rounded-0 btn-sm rounded-0 mb-1">
                            <i class="bi bi-pencil-square"></i>
                </a>
                @Html.ActionLink("", "all-books", "Book", null, new { @class = "btn btn-default fa fa-times text-danger rounded-0", @id = "btnBack" })
                @Html.ActionLink("", "AddnewBook", "Book", null, new { @class = "btn btn-default bi bi-plus", @id = "btnuploadmore" })


                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">

                        @for (int i = 0; i < Model.Gallery.Count(); i++)
                        {
                            <li data-bs-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "") "> <p> @i  </p>  </li>

                        }
                    </ol>
                    <div class="carousel-inner" style="max-height:500px">
                        @for (int i = 0; i < Model.Gallery.Count(); i++)
                        {
                            <div class="@(i==0 ? "carousel-item active" : "carousel-item") ">
                                <img class="d-block w-100" src="../@Model.Gallery[i].URL" alt="@Model.Gallery[i].Name">
                            </div>
                        }

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
