        .small-images a.selected {
            border: 1px solid red
        }



    .carousel-indicators li {
        text-indent: 0px;
        height: 30px;
        background-color: #fff;
        border: black;
        border-radius: 15px;
        font-size: 20px;
        text-align: center;
        font-weight: bold;
        border-style:double;
    }

    p {
        font-family: 'Poppins', sans-serif;
