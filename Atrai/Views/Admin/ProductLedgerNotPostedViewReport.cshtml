                    <table class="table table-bordered table-hover table-striped" width="100%">
                        <thead>
                            <tr class="text-center">
                                
                                <th class="align-middle">Date</th>
                                <th class="align-middle">Code</th>
                                <th class="align-middle">Type</th>
                                <th class="align-middle">Referance</th>
                                <th class="align-middle">Price</th>


                                <th class="align-middle">Warehouse</th>
                                <th class="align-middle">Qty</th>
                                <th class="align-middle">Cumula. Bal.</th>

                                <th class="align-middle">Amount</th>
                                <th class="align-middle">Cumul. Amount</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                //decimal cumulativefigure = 0;
                                foreach (var item in Model)
                                {
                                    var indbalance =  Convert.ToDouble(item.Quantity);
                                    var ttlindamount =  Convert.ToDouble(item.Amount);


                                    ttlbalance = ttlbalance+indbalance;
                                    finalamount = finalamount+ttlindamount;


                                    <tr style="font-family:Arial Narrow;font-size:14.5px;">
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.TransactionDate)</td>
                                        
                                        <td>
                                        @if (item.SalesId != null || item.PurchaseId != null )
                                            {
                                                @* || item.SalesReturnId != null || item.SalesExchangeId != null || item.IssueId != null || item.DamageId != null || item.PurchaseReturnId != null *@
                                                if (item.SalesId != null)
                                                {
                                                    @Html.ActionLink(item.DisplayCode + "", "InvoiceViewReport","Sales" , new { saleId = item.SalesId, type = "pdf" }, new { @target = "_blank" , title="Go To Sales"})
                                                }
                                                else if (item.PurchaseId != null)
                                                {
                                                    @Html.ActionLink(item.DisplayCode + "", "PurchaseInvoiceViewReport","Purchase" , new { PurchaseId = item.PurchaseId, type = "pdf" }, new { @target = "_blank" , title="Go To Purchase" })
                                                }
                                                else if (item.SalesReturnId != null)
                                                {
                                                    @Html.ActionLink(item.DisplayCode + "", "PurchaseInvoiceViewReport","Purchase" , new { PurchaseId = item.PurchaseId, type = "pdf" }, new { @target = "_blank" , title="Go To Purchase" })
                                                }
                                                else if (item.SalesExchangeId != null)
                                                {
                                                    @Html.ActionLink(item.DisplayCode + "", "PurchaseInvoiceViewReport","Purchase" , new { PurchaseId = item.PurchaseId, type = "pdf" }, new { @target = "_blank" , title="Go To Purchase" })
                                                }
                                            }
                                            else
                                            {
                                              @Html.DisplayFor(modelItem => item.DisplayCode)
                                            }
                                        </td>
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.DocType)</td>
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.RefName)</td>
                                        @*<td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.Category)</td>
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.Code)</td>
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.Name)</td>*@
