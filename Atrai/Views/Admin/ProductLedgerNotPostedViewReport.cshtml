                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.WarehouseName)</td>
                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(item.Quantity)))</td>
                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlbalance)))</td>

                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(item.Amount)))</td>
                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(finalamount)))</td>

