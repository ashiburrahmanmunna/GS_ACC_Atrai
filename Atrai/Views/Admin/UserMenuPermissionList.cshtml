@model IEnumerable<Atrai.Model.Core.Entity.MenuPermission_MasterModel>
@{
    ViewData["Title"] = "User Menu Permission List";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<style>
    tbody {
        height: 150px !important;
    }
</style>

<div class="card">
    <div class="card-body">
        <div class="row pb-4">
            <div class="col-md-9 col-12">
                <h2 id="styletext">User Menu Permission List</h2>
            </div>
            <div class="col-md-3 col-12 text-end">
                @Html.ActionLink("User Menu Permission Entry", "AddUserMenuPermission", null, null, new { @class = "btn btn-sm btn-outline-primary ", @id = "btnBack" })
            </div>

        </div>
        <div class="table-responsive text-center">
            <table id="tbllist" class="table table-striped table-bordered table-hover border" cellspacing="0" width="100%">
                <thead class="text-center bg-light">
                    <tr>
                        <th>
                            User Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Company Name
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.UserAccount.Name
                                </td>
                                <td>
                                    @item.UserAccount.Email
                                </td>
                                <td>
                                    @item.Company.CompanyName
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn"></button>
                                        <button type="button" class="btn dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false" data-bs-reference="parent">
                                            <span class="visually-hidden">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                @Html.ActionLink(" Edit ", "AddUserMenuPermission", new { MenuPermissionId = item.Id, UserId = item.LUserIdPermission, comid = item.ComId}, new { @class = "bi bi-pencil-square text-warning dropdown-item", @target = "_blank" })

                                            </li>
                                            <li>
                                                @Html.ActionLink(" Delete ", "DeleteUserMenuPermission", new { MenuPermissionId = item.Id, UserId = item.LUserIdPermission, comid = item.ComId, isDelete = 1 }, new { @class = "bi bi-trash text-danger dropdown-item" })
                                            </li>
                                        </ul>
                                    </div>

                                </td>
                            </tr>
                        }}
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts{
    <script>

        $(document).ready(function () {

            $('#tbllist').DataTable({
                dom: '<"dom_wrapper fh-fixedHeader"flB>tip',
                //buttons: [
                //    'copy', 'csv', 'excel', 'pdf'
                //],
                buttons: {
                    dom: {
                        button: {
                            className: 'btn btn-sm '
                        }
                    },
                    buttons: [
                        {
                            extend: 'colvis',
                            "columns": ':not(:last-child)',
                            text: '<i class="mdi mdi-view-column"></i>',
                            className: 'btn-info',
                            titleAttr: 'Show / hide columns',
                            //collectionLayout: 'fixed two-column'

                        },
                        {
                            extend: 'excel',
                            text: '<i class="bi bi-file-earmark-excel"></i>',
                            className: 'btn-success',
                            titleAttr: 'Export to excel'
                        }

                    ]
                },
                //"columnDefs": [
                //    // Hide second, third and fourth columns
                //    { "visible": false, "targets": [0] }
                //],
                "searching": true,
                "paging": false,
                "ordering": true,
                "info": true,
                "iDisplayLength": 20,
                "lengthMenu": [[5, 10, 20, 50, -1], [5, 10, 20, 50, "All"]],
                "scrollX": true,
                "scrollY": "60vh",
                "scrollCollapse": true,
                //fixedColumns: {
                //    leftColumns: 2,
                //    rightColumns: 1
                //},
                language: {
                    sLengthMenu: "_MENU_",
                    search: "",
                    searchPlaceholder: "Search..."
                }
            });
        });


    </script>
}



