<body>

    <h3>
        @{
            System.Globalization.CultureInfo BDFormat = new System.Globalization.CultureInfo("hi-IN");
        }

    </h3>




    <div id="main">
        <div class="container">
            <form>
                @if (Model != null && Model.Count() > 0)
                {
                    if (IsLogo == 1)
                    {
                        <div class="row">

                            <div class="col-md-2 col-2">
                                @if (@comimagepath != null)
                                {
                                    <img class="center img-fluid" style="max-height:120px;" src="..@comimagepath" onerror="this.onerror=null; this.src='.@comimagepath'" alt="" id="main-img">
                                }
                                else
                                {
                                    <h2 class="text-left m-0">@Model.FirstOrDefault().ComName</h2>
                                }
                            </div>
                            <div class="col-md-10 col-10">
                                <div class="row">
                                    <div class="col-md-12 col-10">
                                        <h3 class="text-left">@Model.FirstOrDefault().ComName</h3>
                                    </div>
                                    <div class="col-md-12 text-left">
                                        <span>
                                            @Model.FirstOrDefault().ComAddress
                                        </span>
                                        <span class="float-right">
                                            <input id="print" tabindex="1" type="button" value="Print" onclick="ClosePrint()" />
                                        </span>
                                    </div>
                                    <div class="col-md-12 text-left">
                                        <h5>@Model.FirstOrDefault().ReportCaption</h5>
                                    </div>
                                    <div class="col-md-12">
                                        @Model.FirstOrDefault().ReportCaptionSmall
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-12 col-12 text-center">
                                @if (@comimagepath != null)
                                {
                                    <img class="center img-fluid" style="max-height:120px;" src="..@comimagepath" onerror="this.onerror=null; this.src='.@comimagepath'" alt="" id="main-img">

                                }
                                else
                                {
                                    <h2 class="text-center m-0">@Model.FirstOrDefault().ComName</h2>

                                }
                            </div>

                            <div class="col-md-12 text-center">
                                <span>
                                    @Model.FirstOrDefault().ComAddress
                                </span>
                                <span class="float-right">
                                    <input id="print" tabindex="1" type="button" value="Print" onclick="ClosePrint()" />
                                </span>
                            </div>
                            <div class="col-md-12 text-center">
                                <h5>Ledger Details Report || @Model.FirstOrDefault().ReportCaption</h5>
                            </div>
                            <div class="col-md-12">
                                @Model.FirstOrDefault().ReportCaptionSmall
                            </div>
                        </div>
                    }




                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4 border border-dark">
                                GL NAME
                            </div>
                            <div class="col-md-4 border border-dark">
                                GL NAME
                            </div>
                            <div class="col-md-4 border border-dark">
                                GL TYPE
                            </div>
                        </div>
                        <div class="row my-2">
                            <div class="col-md-4 border border-dark">
                            </div>
                            <div class="col-md-4 border border-dark">
                                @Model.FirstOrDefault().ReportCaption
                            </div>
                            <div class="col-md-4 border border-dark">
                                Subsidiary Ledger
                            </div>
                        </div>
                        <div class="row my-2 text-center">
                            <div class="col-md-3 border border-dark">
                                <h6>OP. Balance :  @(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlopbalance)))</h6>
                            </div>
                            <div class="col-md-3 border border-dark">
                                <h6>Total Dr :  @(String.Format(BDFormat, "{0:N}", ttldebit))</h6>
                            </div>
                            <div class="col-md-3 border border-dark">
                                <h6>Total Cr :  @(String.Format(BDFormat, "{0:N}", -ttlcredit))</h6>
                            </div>
                            <div class="col-md-3 border border-dark">
                                <h6>CL. Balance : @(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlFinalAmount))) </h6>
                            </div>
                        </div>
                    </div>
                    <table class="table table-bordered table-hover table-striped" width="100%">
                        <thead>
                            <tr class="text-center">

                                <th class="align-middle">Emloyee Name</th>
                                <th class="align-middle">Department</th>
                                <th class="align-middle">Designation</th>
                                <th class="align-middle">Section</th>
                                <th class="align-middle">Loan</th>
                                <th class="align-middle">Advance</th>
                                <th class="align-middle">Loan Deduction</th>
                                <th class="align-middle">Adv Deduction</th>
                                <th class="align-middle">Closing Balance</th>


                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr style="font-family:Arial Narrow;font-size:14.5px;">
                                        <td style="max-width: 110px; overflow-wrap: break-word;">
                                            @if (item.EmployeeId != null)
                                            {
                                                @Html.ActionLink(item.EmployeeName + "", "EmployeeWiseDetailsDataViewReport", "Admin", new { ReferanceId = item.EmployeeId, dtFrom = item.FromDate, dtTo = item.ToDate, Type = "EmployeeLoanDetailsData" }, new { @target = "_blank", title = "Go To Details Report" })
                                            }
                                        </td>
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.DesignationName)</td>
                                        <td class="whitespaceprewrap">@Html.DisplayFor(modelItem => item.SectionName)</td>
                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(item.LoanAmount)))</td>
                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", item.AdvanceAmount))</td>
                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", item.LoanDeduction))</td>
                                        <td class="text-right">@(String.Format(BDFormat, "{0:N}", item.AdvanceDeduction))</td>
                                        <td class="text-right">
                                            @if (item.EmployeeId != null)
                                            {
                                                @Html.ActionLink(String.Format(BDFormat, "{0:N}", item.FinalAmount), "EmployeeWiseDetailsDataViewReport", "Admin", new { ReferanceId = item.EmployeeId, dtFrom = item.FromDate, dtTo = item.ToDate, Type = "EmployeeNotPosted" }, new { @target = "_blank", title = "Go To Employee Details" })
                                            }

                                        </td>
                                    </tr>

                                }
                            }

                        </tbody>
                        <tfoot>
                            @{
                                <tr class="text-right font-weight-bold">
                                    <td colspan="3"><h6>Total (Transaction) :</h6></td>
                                    <td>@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlopbalance)))</td>
                                    <td>@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlLoanAmount)))</td>
                                    <td>@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlAdvanceAmount)))</td>
                                    <td>@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlLoanDeduction))) </td>
                                    <td>@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlAdvanceDeduction)))</td>
                                    <td>@(String.Format(BDFormat, "{0:N}", Convert.ToDecimal(ttlFinalAmount))) </td>

                                </tr>

                            }
                        </tfoot>
                    </table>
                }
                 else
                {
                <p>No data available</p>
                }
            </form>

        </div>
    </div>


</body>
</html>