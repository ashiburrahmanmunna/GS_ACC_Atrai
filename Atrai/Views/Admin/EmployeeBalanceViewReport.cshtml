@using Microsoft.AspNetCore.Http
@using Atrai.Core.Common
@inject IHttpContextAccessor HttpContextAccessor
@inject clsProcedure clsproc

@model List<Atrai.Controllers.AdminController.EmployeeLedgerModel>
@{
    ViewData["Title"] = "Employee Balance";
    Layout = "~/Views/Shared/_PrintLayout.cshtml";



    var comimagepath = @HttpContextAccessor.HttpContext.Session.GetString("comImagePath");
    var IsLogo = 1;

    var ttldebit = 0m;  // Change 'var ttldebit = 0;' to 'var ttldebit = 0m;'
    var ttlcredit = 0m; // Change 'var ttlcredit = 0;' to 'var ttlcredit = 0m;'
                        //var closingbalance = ttldebit + ttlcredit;

    var ttlopbalance = 0m;
    var ttlAdvanceAmount = 0m;
    var ttlLoanAmount = 0m;
    var ttlAdvanceDeduction = 0m;
    var ttlLoanDeduction = 0m;
    var ttlFinalAmount = 0m;

    if(Model != null && Model.Count() > 0)
    {
        ttldebit = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.OpeningBalance) + Convert.ToDecimal(x.AdvanceAmount) + Convert.ToDecimal(x.LoanAmount)));
        ttlcredit = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.AdvanceDeduction) + Convert.ToDecimal(x.LoanDeduction)));
        //var closingbalance = ttldebit + ttlcredit;

        ttlopbalance = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.OpeningBalance)));
        ttlAdvanceAmount = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.AdvanceAmount)));
        ttlLoanAmount = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.LoanAmount)));
        ttlAdvanceDeduction = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.AdvanceDeduction)));
        ttlLoanDeduction = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.LoanDeduction)));
        ttlFinalAmount = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.FinalAmount)));
    }



}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>
    </title>

