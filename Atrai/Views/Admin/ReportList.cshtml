    <script>
        $(document).ready(function () {
            var dataLoad;
            var parentTable;
            var dataLoad1;
            var parentTable1;

            $("#Reports").select2();

            if ('@ViewBag.ReportType' == "Standard") {
                $("#standard-id").addClass("active");
                $("#custom-id").removeClass("active");
                $("#management-id").removeClass("active");

                $("#standard-view-id").removeClass("d-none");
                $("#custom-view-id").addClass("d-none");
                $("#management-view-id").addClass("d-none");
                $("#management").addClass("d-none");
                $("#ManagementReport").addClass("d-none");
                LoadStandartReport();
