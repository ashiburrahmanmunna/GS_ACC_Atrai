            if ('@ViewBag.ReportType' == "Custom") {
                $("#standard-id").removeClass("active");
                $("#custom-id").addClass("active");
                $("#management-id").removeClass("active");

                $("#standard-view-id").addClass("d-none");
                $("#custom-view-id").removeClass("d-none");
                $("#management-view-id").addClass("d-none");
                $("#management").addClass("d-none");
                CustomReport();
