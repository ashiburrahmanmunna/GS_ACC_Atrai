        }

    .divDesign {
        padding: 20px;
        border: 1px solid #bdbcba;
        margin-top: 20px;
        margin-bottom: 10px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .star-button {
        position: relative;
        display: inline-block;
        width: 80px; /* Adjust the width */
        height: 80px; /* Adjust the height */
        cursor: pointer;
        border: none;
        background-color: rgba(255, 255, 255, 0);
    }

    .star-svg {
        width: 100%;
        height: 100%;
        fill: none;
        stroke: #c8c8c8;
        padding-top: 20px;
        stroke-width: 0.5;
    }

    .star-button:hover .star-svg {
        stroke: #2ca01c;
        fill: #2ca01c;
    }


    .tabulator .tabulator-row .active-cell {
        overflow: visible;
    }


    .tabulator-row:nth-child(odd) .tabulator-cell {
        border-right-color: #ced4da;
    }

    .tabulator-row:nth-child(even) .tabulator-cell {
        border-right-color: #ced4da;
    }


    /*
                    .label-hover:hover {
                        background-color: #E9ECEF;
                        border-right: 50px solid #E9ECEF;
                    }*/


    .tabulator-tableholder {
        background-color: white;
    }


    .tabulator .tabulator-header .tabulator-col {
        border-right: 1px solid #dee2e6;
        background-color: #ffffff;
    }

    /* Targeting the header cells on hover */
    .tabulator .tabulator-header:hover {
        background-color: #ffffff;
        color: black;
    }


    .tabulator .tabulator-footer .tabulator-paginator .tabulator-page:hover {
        background-color: deepskyblue;
    }

    .tabulator .tabulator-footer {
        background-color: #fff;
        color: black;
    }

    .tabulator .tabulator-tableholder .tabulator-table .tabulator-row.tabulator-calcs {
        font-weight: 700;
