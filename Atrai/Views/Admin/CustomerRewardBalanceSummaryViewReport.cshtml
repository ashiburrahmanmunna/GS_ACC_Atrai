@using Microsoft.AspNetCore.Http
@using Atrai.Core.Common
@inject IHttpContextAccessor HttpContextAccessor
@inject clsProcedure clsproc

@model IEnumerable<Atrai.Controllers.AdminController.CustomerLedgerModel>
@{
    ViewData["Title"] = "Ledger";
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
    var comimagepath = @HttpContextAccessor.HttpContext.Session.GetString("comImagePath");
    var IsLogo = 1;
    //var ttldebit = Convert.ToDecimal(@Model.Where(x => Convert.ToDecimal(x.FinalAmount) > 0).Sum(x => Convert.ToDecimal(x.FinalAmount)));
    //var ttlcredit = Convert.ToDecimal(@Model.Where(x => Convert.ToDecimal(x.FinalAmount) <= 0).Sum(x => Convert.ToDecimal(x.FinalAmount)));
    //var closingbalance = ttldebit + ttlcredit;

    var ttldebit = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.OpeningBalance) + Convert.ToDecimal(x.SalesAmount) + Convert.ToDecimal(x.SalesReturn)));
    var ttlcredit = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.SalesPayment) + Convert.ToDecimal(x.SalesReturnPayment)  + Convert.ToDecimal(x.AccountsTransaction)  ));
    //var closingbalance = ttldebit + ttlcredit;
    
    var ttlopbalance = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.OpeningBalance)));
    var ttlSales = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.SalesAmount)));
    var ttlSalesReturn = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.SalesReturn)));
    var ttlSalesPayment = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.SalesPayment)));
    var ttlSalesRetPayment = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.SalesReturnPayment)));
    var ttlAccountsAmount = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.AccountsTransaction)));
    var ttlFinalAmount = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.FinalAmount)));
    var ttlDiscount = Convert.ToDecimal(@Model.Sum(x => Convert.ToDecimal(x.Discount)));



}


